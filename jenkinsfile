pipeline {
    agent any
    stages {
        stage('start') {
            steps {
                sh 'apt install -y python3-pip'
                sh 'pip install -r requirements.txt'
                sh 'chmod u+x hello.py'
                sh 'touch result.txt'
                sh 'python3 hello.py -n IlyaK > result.txt'
            }
        }
        stage('save-result') {
            steps {
                archiveArtifacts artifacts: 'result.txt'
            }
        }
    }
}